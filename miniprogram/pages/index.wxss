@import "./../component/style/my-style.wxss";

.channel-list {
  display: flex;
  align-items: center;
}

.channel-list-item {
  padding: 5px;
  /* width: 70px; */
  text-align: center;
  border-bottom: 2px #f6f6f6 solid;
}

.current-channel-item {
  border-bottom-color: blue;
}

.index-box {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
  align-items: flex-start;
}

.program-list {
  flex: auto;
  overflow-y: hidden;
  width: 100%;
  height: 100%; /*此处不设置height，在ios设备上不会出现滚动条，非常难受，找了几个小时*/
}

.channel-date {
  flex: none;
  overflow-x: hidden;
  width: 100%;
  background: #fff;
}
