<view class="index-box">
  <view class="program-list">
    <program-list program-list="{{programList}}" channel="{{currentChannelObj}}"/>
  </view>
  <view class="channel-date">
    <!--不通的日期类型渲染出不通的日期选择器-->
    <day-selector loc-date="{{locDate}}" bindswitchdate="switchDate" wx:if="{{currentChannelObj.dateType=='day'}}" />
    <year-selector loc-date="{{locDate}}" bindswitchdate="switchDate" wx:if="{{currentChannelObj.dateType=='year'}}" start="{{currentChannelObj.start}}" end="{{currentChannelObj.end}}"/>
    <th-selector loc-date="{{locDate}}" bindswitchdate="switchDate" wx:if="{{currentChannelObj.dateType=='th'}}" end="{{currentChannelObj.end}}" th-name="{{currentChannelObj.thName}}"/>

    <scroll-view scroll-x enable-flex scroll-into-view="channel-{{initChannelCode}}">
      <view class="channel-list">
        <view wx:for="{{channelList}}" wx:key="code" style="flex:none;padding:0 10px;" id="channel-{{item.code}}" bindtap="switchChannel" data-channel="{{item}}">
          <view class="channel-list-item {{item.code == currentChannelObj.code ? 'current-channel-item':''}}">
            <channel-logo channel="{{item}}" />
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
</view>