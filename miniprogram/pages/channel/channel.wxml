<view class="flex-box">
  <view class="flex-auto">
    <view class="programs" wx:if="{{programList}}">
      <program-list program-list="{{programList}}" />
    </view>
  </view>
  <view class="flex-none">
    <view class="channel-date">
      <day-selector loc-date="{{options.date}}" bindswitchdate="switchDate" wx:if="{{channel.dateType=='day'}}" />
      <year-selector loc-date="{{options.date}}" bindswitchdate="switchDate" wx:if="{{channel.dateType=='year'}}" start="{{channel.start}}" end="{{channel.end}}"/>
      <th-selector loc-date="{{options.date}}" bindswitchdate="switchDate" wx:if="{{channel.dateType=='th'}}" end="{{channel.end}}" th-name="{{channel.thName}}"/>
    </view>
    <view class="padding-box">
      <channel focused="{{focusedMap[channel.code]}}" channel="{{channel}}" user-profile-id="{{userProfile._id}}" />
    </view>
  </view>
</view>