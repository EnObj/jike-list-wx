<view class="flex-between">
  <navigator url="/pages/channel/channel?channel={{channel.code}}">
    <view class="flex-start">
      <view>
        <channel-logo channel="{{channel}}" />
      </view>
      <view style="margin-left:10px;">
        <view>{{channel.name}}</view>
        <view class="not-importent">最近记录，描述等</view>
      </view>
    </view>
  </navigator>
  <view>
    <view>
      <button type="primary" size="mini" bindtap="focus" wx:if="{{!focused}}">关注</button>
      <button type="default" size="mini" bindtap="unfocus" wx:else>已关注</button>
    </view>
  </view>
</view>